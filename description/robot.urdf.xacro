<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="robot">

  <!-- Inclusion de xacro pour utiliser les macros et les constantes -->
  <xacro:property name="pi" value="3.141592653589793"/>

  <!-- Définition des matériaux -->
  <material name="white">
    <color rgba="1 1 1 1"/>
  </material>
  <material name="orange">
    <color rgba="1 0.3 0.1 1"/>
  </material>
  <material name="blue">
    <color rgba="0.2 0.2 1 1"/>
  </material>
  <material name="black">
    <color rgba="0 0 0 1"/>
  </material>

  <!-- Définition du lien world -->
  <link name="world">
    <!-- Contenu du lien world -->
  </link>

  <!-- Définition du lien de base -->
  <link name="base_link">
    <!-- Contenu du lien base_link -->
  </link>

  <!-- Définition du joint base_joint -->
  <joint name="base_joint" type="fixed">
    <parent link="world"/>
    <child link="base_link"/>
    <origin rpy="0 0 0" xyz="0 0 0"/>
  </joint>

  <!-- Définition du lien chassis -->
  <link name="chassis">
    <visual>
      <origin xyz="0 0 0"/>
      <geometry>
        <box size="0.3 0.3 0.15"/>
      </geometry>
      <material name="white"/>
    </visual>
  </link>

  <!-- Définition du joint entre base_link et chassis -->
  <joint name="chassis_joint" type="fixed">
    <parent link="base_link"/>
    <child link="chassis"/>
    <origin xyz="0 0 0"/>
  </joint>
  
  <!-- Définition du joint entre chassis et le bras gauche -->
  <joint name="left_wheel_joint" type="continuous">
    <parent link="chassis"/>
    <child link="left_wheel"/>
    <origin xyz="0 0.175 0" rpy="-${pi/2} 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>
  
  <!-- Définition du lien bras gauche du chassis -->
  <link name="left_wheel">
    <visual>
      <origin xyz="0 0 0"/>
      <geometry>
        <cylinder radius="0.05" length="0.04"/>
      </geometry>
      <material name="blue"/>
    </visual>
  </link>
  
  <!-- Définition du joint entre chassis et le bras droit -->
  <joint name="right_wheel_joint" type="continuous">
    <parent link="chassis"/>
    <child link="right_wheel"/>
    <origin xyz="0 -0.175 0" rpy="${pi/2} 0 0"/>
    <axis xyz="0 0 -1"/>
  </joint>
  
  <!-- Définition du lien bras droit du chassis -->
  <link name="right_wheel">
    <visual>
      <origin xyz="0 0 0"/>
      <geometry>
        <cylinder radius="0.05" length="0.04"/>
      </geometry>
      <material name="blue"/>
    </visual>
  </link>

</robot>


